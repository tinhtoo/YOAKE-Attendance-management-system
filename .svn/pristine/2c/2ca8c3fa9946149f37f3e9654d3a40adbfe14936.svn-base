        $confirmCheck = TR04WorkTimeFix::where('CALD_YEAR', (int)$year)
            ->where('CALD_MONTH', (int)$month)
            ->where('CLOSING_DATE_CD', $deptClsDate2)
            ->where('DEPT_CD', $deptClsDate1)
            ->first();
