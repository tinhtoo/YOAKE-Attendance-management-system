#vertical-splitter {
    border-top: 1px solid #555;
    border-bottom: 1px solid #555;
    border-left: 1px solid #555;
    background: url('../images/vertical-splitter-bg.gif') repeat-y 0px 0px;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
}


/* body-border */

.body-border {
    width: 7px;
}

table#body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}


/* menu */

#menu {
    width: 200px;
    text-align: left;
    vertical-align: top;
    border: 1px solid #555;
    background: #fff;
}