    <script>
        $(document).on('click', '.submit-form', function() {
            var url = $(this).data('url');
            $('#form').attr('action', url);
            $('#form').submit();
        });

        // 確認ダイアル
        function checkSubmit() {
            $checked = confirm("{{ $msg_1005 }}");
            if ($checked == true) {
                document.getElementById("editForm").submit();
                return true;
            } else {
                return false;
            }
        }

        // ENTER時に送信されないようにする
        $(function() {
            $('input').keypress(function(e) {
                if (e.which == 13) {
                    return false;
                }
            });
        });

        // 入力不可：'|'
        $(function() {
            $('#txtCompanyName').on('keydown', function(e) {
                var k = e.keyCode;
                //* '|':code220,は禁則文字 *//
                if (k == 220) {
                    return false;
                }
            });
        });

        // 入力可能文字：数値、ハイフン
        $(function() {
            $('#txtPostCd').on('keydown', function(e) {
                var k = e.keyCode;
                //* 0～9:code48-57, テンキ―0～9:code96-105, ハイフン:code189, テンキー:code109, backspace:code8, delete:code46, →:code39, ←:code37,Tab:code9,Enter:code13,insert:45 以外は禁則文字 *//
                if (!((k >= 48 && k <= 57) || (k >= 96 && k <= 105) || k == 189 || k == 109 || k == 8 ||
                        k == 46 || k == 39 || k == 37 || k == 9 || k == 13 || k == 45)) {
                    return false;
                }
            });
        });

