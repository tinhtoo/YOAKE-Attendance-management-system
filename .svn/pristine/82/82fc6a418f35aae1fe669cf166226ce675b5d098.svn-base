.buttonTest {
    display: inline-block;
    border-radius: 10%;
    /* 角丸       */
    font-size: 10pt;
    /* 文字サイズ */
    text-align: center;
    /* 文字位置   */
    cursor: pointer;
    /* カーソル   */
    padding: 7px 5px;
    /* 余白       */
    background: #ffffff;
    /* 背景色     */
    color: #0000ff;
    /* 文字色     */
    line-height: 1em;
    /* 1行の高さ  */
    opacity: 0.9;
    /* 透明度     */
    transition: .3s;
    /* なめらか変化 */
    border: 0.5px solid #a9a9a9;
    /*box-shadow    : 6px 6px 3px #666666;  /* 影の設定 */
}

.buttonTest:hover {
    /*box-shadow    : none;        /* カーソル時の影消去 */
    /*opacity       : 1;           /* カーソル時透明度 */
    background-color: #c0c0c0;
}